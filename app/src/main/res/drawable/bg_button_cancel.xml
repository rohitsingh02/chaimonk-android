<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ce3333" />
            <stroke
                android:width="1dp"
                android:color="#ce3333" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#d9534f"
                android:endColor="#d9534f"
                android:angle="270" />
            <stroke
                android:width="1dp"

                android:color="#d9534f" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>