<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#6699ff" />
            <stroke
                android:width="1dp"
                android:color="#6699ff" />
            <corners
                android:radius="9dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#31b0d5"
                android:endColor="#31b0d5"
                android:angle="270" />
            <stroke
                android:width="1dp"

                android:color="#31b0d5" />
            <corners
                android:radius="9dp" />
            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>